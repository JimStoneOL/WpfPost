<Page x:Class="WpfPost.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPost.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid x:Name="RegisterButton">
        <Label Content="Login Page" HorizontalAlignment="Left" Margin="285,10,0,0" VerticalAlignment="Top" Height="42" Width="273"/>
        <TextBox x:Name="LoginTextBox" HorizontalAlignment="Left" Height="45" Margin="53,55,0,0" TextWrapping="Wrap" Text="Введите логин" VerticalAlignment="Top" Width="411"/>
        <TextBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="45" Margin="53,149,0,0" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top" Width="411"/>
        <Button x:Name="LoginButton" Content="Войти" HorizontalAlignment="Left" Margin="53,225,0,0" VerticalAlignment="Top" Height="64" Width="205" Click="LoginButton_Click_1"/>
        <Button x:Name="RegisterButton1" Content="Регистрация" HorizontalAlignment="Left" Margin="285,225,0,0" VerticalAlignment="Top" Height="64" Width="205" Click="RegisterButton1_Click"/>

    </Grid>
</Page>
